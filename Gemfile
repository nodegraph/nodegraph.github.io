source "https://rubygems.org"

# This will use the latest version of Jekyll
gem "jekyll"

# This is the theme you are using, as specified in _config.yml
gem "just-the-docs"

# This plugin is specified in your _config.yml
gem "jekyll-seo-tag"

# This plugin is required for the `remote_theme` setting in your _config.yml
gem "jekyll-remote-theme"

# Required for `jekyll serve` on Ruby 3.0+
gem "webrick"

# Performance-booster for watching directories on Windows, as recommended by Jekyll
gem "wdm", ">= 0.1.0", platforms: [:mingw, :x64_mingw, :mswin]
